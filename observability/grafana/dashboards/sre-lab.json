{
  "title": "GuardRail SRE Lab",
  "timezone": "browser",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request rate",
      "targets": [
        { "expr": "sum(rate(http_requests_total[1m]))", "refId": "A" }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Error rate (Prometheus)",
      "targets": [
        { "expr": "sum(rate(http_requests_total{status=\"500\"}[5m])) / sum(rate(http_requests_total[5m]))", "refId": "A" }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "p95 latency (s)",
      "targets": [
        { "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket[5m])))", "refId": "A" }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "logs",
      "title": "ERROR logs (Loki / LogQL)",
      "targets": [
        { "datasource": { "type": "loki", "uid": "-- Grafana --" }, "expr": "{app=\"demo-app\"} |= \"ERROR\"", "refId": "A" }
      ],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
